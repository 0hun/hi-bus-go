<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.younghun.hibusgo.mapper.ReservationMapper">

    <resultMap id="reservationMap" type="com.younghun.hibusgo.domain.Reservation">
        <result property="id"            column="id"/>
        <result property="routeId"       column="route_id"/>
        <result property="routeName"     column="route_name"/>
        <result property="timeRequired"  column="time_required"/>
        <result property="accountId"     column="account_id"/>
        <result property="paymentId"     column="payment_id"/>
        <result property="seadId"        column="sead_id"/>
        <result property="searNumber"    column="seat_number"/>
        <result property="seatGrade"     column="grade"/>
        <result property="fare"          column="fare"/>
        <result property="status"        column="status"/>
        <result property="createdAt"     column="created_at"/>
        <result property="updatedAt"     column="updated_at"/>
    </resultMap>

    <select id="findById" resultMap="reservationMap">
      SELECT  r.id
            , r.route_id
            , ro.name as route_name
            , ro.time_required
            , r.account_id
            , r.payment_id
            , r.seat_id
            , s.number as seat_number
            , s.grade
            , r.fare
            , r.status
            , r.created_at
            , r.updated_at
      FROM reservation r
      INNER JOIN seat s
      INNER JOIN route ro
      WHERE r.id = #{id}
      AND r.route_id = ro.id
      AND status != 'DELETE'
    </select>

    <select id="findByAccountId" resultMap="reservationMap" resultType="java.util.ArrayList">
      SELECT  r.id
           , r.route_id
           , ro.name as route_name
           , ro.time_required
           , r.account_id
           , r.payment_id
           , r.seat_id
           , s.number as seat_number
           , s.grade
           , r.fare
           , r.status
           , r.created_at
           , r.updated_at
      FROM reservation r
      INNER JOIN seat s
      INNER JOIN route ro
      WHERE r.account_id = #{accountId}
      AND r.route_id = ro.id
      AND status != 'DELETE'
    </select>

</mapper>
