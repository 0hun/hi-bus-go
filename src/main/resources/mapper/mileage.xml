<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.younghun.hibusgo.mapper.MileageMapper">

    <resultMap id="mileageMap" type="com.younghun.hibusgo.domain.Mileage">
        <result property="id" column="id"/>
        <result property="accountId" column="account_id"/>
        <result property="mileage" column="mileage"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="findByAccountId" resultMap="mileageMap">
        SELECT id
             , account_id
             , mileage
             , status
        FROM MILEAGE
        WHERE account_id = #{accountId}
    </select>

    <update id="updateMileage" parameterMap="mileageMap">
        UPDATE MILEAGE
        SET mileage = #{mileage}
        AND updated_at = NOW()
        WHERE account_id = #{accountId}
    </update>

</mapper>
